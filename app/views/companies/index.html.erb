<table class="table">
  <h2>Companies</h2>

  <th>Name</th>
  <th>
    Phone Numbers
  </th>
  <th>Distributor</th>
  <th></th>
  <th></th>
  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td>  <%= company.name %> </td>
      <td>  <%= company.phone_numbers.pluck(:digits, :phone_type).join(", ") %> </td>
      <td>  <% if company.distributor %>
        <i class="fa fa-check" aria-hidden="true"></i>
        <% end %>
      </td>
      <td><%= link_to "Edit", edit_company_path(company.id) %></td>
      <td><%= link_to company_path(company.id), method: :delete, class: "delete" do %>
        <%= fa_icon("trash-o") %> <span>delete</span>
        <% end %>
      </td>
    </tr>
    <% end %>
    <tr></tr>

  </tbody>

</table>

<%= button_to "Add Company", new_company_path, method: :get, class: "btn btn-primary" %>

<%=  paginate @companies %>
