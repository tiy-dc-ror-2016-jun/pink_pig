<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :company %><br>
    <select class="form-control">
      <%= Company.all.each do |company| %>
        <option><%= company.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :client_notes %><br>
    <%= f.text_field :notes, class:"form-control" %>
  </div>

  <fieldset>
  <legend>
    Phone Numbers:
    <span class="pull-right">
      <%= link_to fa_icon("plus") + " Add Phone Number", "#", id: "add-phone-number-btn", class: 'btn btn-sm btn-success' %>
    </span>
  </legend>
  <%= f.fields_for :phone_numbers do |phone_number_fields| %>
    <div class="form-group">
      <%= phone_number_fields.label :digits %><br>
      <%= phone_number_fields.text_field :digits, class:"form-control" %>
      <%= phone_number_fields.label :phone_type %><br>
      <%= phone_number_fields.text_field :phone_type, class:"form-control" %>
      <%= phone_number_fields.label :_destroy, "Remove" %>
      <%= phone_number_fields.check_box :_destroy, class: '_destroy' %>
    </div>
  <% end %>
  </fieldset>

    <%= f.submit "Save", class:"btn btn-default btn-primary"%>
<% end %>
